<%= erb :_errors %>

<form id="login" action="/login" method="post">
  <h2>Please Login</h2>
  <section class="form-input">
    <input name="user[username]" type="text" placeholder="Username"></input>
  </section>
  <section class='form-input'>
    <input name="user[password]" type="password" placeholder="Password"></input>
  </section>
  <input type="submit" value="Login"class ='button'></input>
</form>
