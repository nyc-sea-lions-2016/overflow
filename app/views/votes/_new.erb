<section class="vote_display">

  <form class="upvote" action="/answers/<%=answer.id%>/upvotes" method="post" >
    <button type="submit" class="btn btn-default btn-sm">
      <span class="glyphicon glyphicon-thumbs-up"></span>
    </button>
  </form>
  <section class="vote_counter">
     <%= answer.vote_count %>
  </section>
  <form class='downvote' action="/answers/<%=answer.id%>/downvotes" method="post">
    <button type="submit" class="btn btn-default btn-sm">
      <span class="glyphicon glyphicon-thumbs-down"></span>
    </button>
  </form>
</section>

